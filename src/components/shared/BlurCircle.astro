---
import type { TailwindColor } from "@/utils/types/tailwind";
import { MAP_COLOR_VARIANT_TO_BG } from "@/utils/mapVariants";

type Props = {
  position: "bottom" | "top";
  color: TailwindColor;
};

const { position, color } = Astro.props;
---

<div
  class:list={{
    [`fixed z-0 h-[224px] w-[224px] lg:w-[600px] lg:h-[600px] rounded-full ${MAP_COLOR_VARIANT_TO_BG[color]} blur-[300px] md:blur-[600px] opacity-5`]: true,
    ["left-0 top-0"]: position === "top",
    ["right-0 bottom-0"]: position === "bottom",
  }}
>
</div>
